#!/bin/bash

NAME="subtit"
VERSION="0.001"
AUTHOR="budRich"
CONTACT='robstenklippa@gmail.com'
CREATED="2017-12-18"
UPDATED="2017-12-18"

SUBLIME_INSTANCE=${SUBLIME_INSTANCE:-'sublime_main'}

main(){
  while getopts :vhli: option; do
    case "${option}" in
      l) followlink=1 ;;
      i) SUBLIME_INSTANCE="${OPTARG}" ;;
      v) printf '%s\n' \
           "$NAME - version: $VERSION" \
           "updated: $UPDATED by $AUTHOR"
         exit ;;
      h|*) printinfo && exit ;;
    esac
  done

  st=$(i3get -i "$SUBLIME_INSTANCE" -r t)
  if [[ -n "$st" ]]; then
    st=${st//'"'/}
    st=${st/'~'/$HOME}
    st=${st%'- '*}
    if [[ $st =~ '?' ]]; then
      st=${st%' ?'*}
    elif [[ $st =~ \( ]]; then
      st=${st%' ('*}
    fi
    [[ $followlink = 1 ]] && st=$(readlink -f "$st")
    echo "$st"
  fi
}

printinfo(){
  case "$1" in
    m ) printf '%s' "${about}" ;;

    f )
      printf '%s' "${bouthead}"
      printf '%s' "${about}"
      printf '%s' "${boutfoot}"
    ;;

    ''|* )
      printf '%s' "${about}" | awk '
         BEGIN{ind=0}
         $0~/^```/{
           if(ind!="1"){ind="1"}
           else{ind="0"}
           print ""
         }
         $0!~/^```/{
           gsub("[`*]","",$0)
           if(ind=="1"){$0="   " $0}
           print $0
         }
       '
    ;;
  esac
}

bouthead="
${NAME^^} 1 ${CREATED} Linux \"User Manuals\"
=======================================
NAME
----
"

boutfoot="
AUTHOR
------
${AUTHOR} <${CONTACT}>
<https://budrich.github.io>
SEE ALSO
--------
i3get(1)
"

about='
`subtit` - Output the currently open file in sublime.
SYNOPSIS
--------
`subtit` [`-v`|`-h`|`-l`]
DESCRIPTION
-----------
`subtit` uses `i3get` to get the window title of
`Sublime Text`. It extracts the filename from the
title and prints it to `stdout`. If `-l` flag is
passed `subtit` will follow symbolic links if any
and print the source file.
OPTIONS
-------
`-v`
  Show version and exit.
`-h`
  Show help and exit.
`-l`
  Follow symbolic links.
`-i` *SUBLIME_INSTANCE*
  Instance name of window to extract filenmane from.
  Defautlt: *sublime_text*
ENVIRONMENT
-----------
`SUBLIME_INSTANCE`
  If non-null the alternative instance name of the
  window to extract the title will be used.
  Overridden by the `-i` option.
  Defautlt: *sublime_text*
DEPENDENCIES
------------
sublime
i3get
'

if [ "$1" = "md" ]; then
  printinfo m
  exit
elif [ "$1" = "man" ]; then
  printinfo f
  exit
else
  main "${@}"
fi
