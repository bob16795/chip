#!/bin/sh

choices="laptop\nlaptopdual\nVGA\nmanual"

chosen=$(echo -e "$choices" | dmenu -i -y 23)

case "$chosen" in
	laptopdual) xrandr --output LVDS1 --auto --output VGA1 --auto --right-of LVDS1 && ~/.config/polybar/launch.sh ;;
	laptop) xrandr --output LVDS1 --auto --output VGA1 --off && ~/.config/polybar/launch.sh ;;
	VGA) xrandr --output VGA1 --auto --output LVDS1 --off && ~/.config/polybar/launch.sh ;;
	manual) arandr && ~/.config/polybar/launch.sh ;;
esac
