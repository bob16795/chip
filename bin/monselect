#!/bin/sh

choices="laptop
laptopdual
VGA
manual"

chosen=$(echo "$choices" | rofi -dmenu )

case "$chosen" in
	laptopdual) dual.sh && ~/.config/polybar/launch.sh ;;
	laptop) xrandr --output LVDS1 --auto --output VGA1 --off && ~/.config/polybar/launch.sh ;;
	VGA) xrandr --output VGA1 --auto --output LVDS1 --off && ~/.config/polybar/launch.sh ;;
	manual) arandr && ~/.config/polybar/launch.sh ;;
esac
