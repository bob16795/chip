#!/bin/bash

NAME="postquote"
VERSION="0.001"
AUTHOR="budRich"
CONTACT='robstenklippa@gmail.com'
CREATED="2017-09-30"
UPDATED="2017-09-30"

main(){
  while getopts :vhf:l:w: option; do
    case "${option}" in
      f) FORTUNE_OPTIONS="${OPTARG}";;
      l) MAX_LINES="${OPTARG}";;
      w) WRAP="${OPTARG}";;
      v) printf '%s\n' \
           "$NAME - version: $VERSION" \
           "updated: $UPDATED by $AUTHOR"
         exit ;;
      h|*) printinfo && exit ;;
    esac
  done

  shift $((OPTIND-1))

  [[ -z $1 ]] && printinfo && exit

  MAX_LINES=${MAX_LINES:-9}
  WRAP=${WRAP:-25}

  lchk=$((MAX_LINES+1)) # fortune lines
  while [[ $lchk -gt $MAX_LINES ]]; do
    frt=$(fortune ${FORTUNE_OPTIONS} | fold -s -w"${WRAP}")
    lchk=$(printf '%s' "${frt}" | wc -l)
  done

  echo '<div class="postquote">' > "${1}"
  printf '%s' "${frt}" >> "${1}"
  echo '</div>' >> "${1}"

}

printinfo(){
  case "$1" in
    m ) printf '%s' "${about}" ;;

    f )
      printf '%s' "${bouthead}"
      printf '%s' "${about}"
      printf '%s' "${boutfoot}"
    ;;

    ''|* )
      printf '%s' "${about}" | awk '
         BEGIN{ind=0}
         $0~/^```/{
           if(ind!="1"){ind="1"}
           else{ind="0"}
           print ""
         }
         $0!~/^```/{
           gsub("[`*]","",$0)
           if(ind=="1"){$0="   " $0}
           print $0
         }
       '
    ;;
  esac
}

bouthead="
${NAME^^} 1 ${CREATED} Linux \"User Manuals\"
=======================================
NAME
----
"

boutfoot="
AUTHOR
------
${AUTHOR} <${CONTACT}>
<https://budrich.github.io>
SEE ALSO
--------
fortune(6)
"

about='
`postquote` - Outputs a quote to html
SYNOPSIS
--------
`postquote` [`-v`|`-h`] [[`-f` *fortune-options*] [`-l` *MAX_LINES*] [`-w` *WRAP*]] *OUTPUT-FILE*
DESCRIPTION
-----------
creates a html file with a quote from `fortune`
inside a `<div>` block.
OPTIONS
-------
`-v`
  Show version and exit.
`-h`
  Show help and exit.
`-l` *MAX_LINES*
  Max number of lines in the output. If the quote
  exceeds *MAX_LINES* a new random quote will be used.
  Defaults to **9**.
`-w` *WRAP*
  Maximum length of each line in output.
  Defaults to **29**.
`-f` *forune-options*
  Options to pass to `fortune`
DEPENDENCIES
------------
fortune
EXAMPLES
--------
`postquote -f $HOME/etc/fortunes/budcol -w 40 -l 8 "$HOME/quote.html"`
'

if [ "$1" = "md" ]; then
  printinfo m
  exit
elif [ "$1" = "man" ]; then
  printinfo f
  exit
else
  main "${@}"
fi
