echo -e "    \/ __/_/\_\__ \/ "
echo -e "      /_/ /\/\ \_\ "
echo -e "       __/ /\ \__ "
echo -e "       \_\ \/ /_/ "
echo -e "       /        \  "
echo
echo
echo -e "  ${cyn}    shell  ${rst}"  " bash   "
echo -e "  ${cyn}    wm     ${rst}"  " 2bwm   "
echo -e "  ${cyn}    editor ${rst}"  " nvim   "
echo -e "  ${cyn}    distro ${rst}"  " debian "
echo
