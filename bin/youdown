declare -i k;
((k==0))
for i in `cat ~/Music/youtube.txt`
do
	((k+=1)) && youtube-dl $i --download-archive ~/Music/archive -x --add-metadata -o ~/Music/%\(title\)s.%\(ext\)s |grep download &
done
# --audio-format mp3
wait

declare -i k;
((k==0))
for i in `cat ~/Videos/youtube.txt`
do
	((k+=1)) && youtube-dl $i --download-archive ~/Videos/archive --add-metadata -o ~/Videos/%\(title\)s.%\(ext\)s -f 18 | grep download &
done
# --audio-format mp3
wait

